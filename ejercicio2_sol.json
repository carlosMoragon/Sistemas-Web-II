{
    "$schema": "https://json-schema.org/draft/2020-12/schema#",
    "$id": "http://example.com/schemas/superHeroSquad.schema.json",
    "type": "object",
    "title": "Super Hero Squad",
    "description": "Super Hero Squad",
    "required": [
        "squadName",
        "homeTown",
        "formed",
        "secretBase",
        "active",
        "members"
    ],
    "properties": {
        "squadName": {
            "type": "string",
            "description": "Nombre del squad"
        },

        "homeTown": {
            "type": "string",
            "description": "Nombre de la ciudad"
        },
        "formed": {
            "type": "number",
            "description": "fecha en la que se creo"
        },
        "secretBase": {
            "type": "string",
            "description": "Donde tiene la base secreta"
        },
        "active": {
            "type": "boolean",
            "description": "¿Está el grupo activo?"
        },
        "members": {
            "type": "array",
            "items": {
                "type": "object",
                "title": "member",
                "description": "Describe a un miembro del equipo",
                "required": [
                    "name",
                    "age",
                    "secretIdentity",
                    "powers"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "age": {
                        "type": "number"
                    },
                    "secretIdentity": {
                        "type": "string"
                    },
                    "powers": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "description": "Lista de los miembros del grupo"
        } 
    }
}