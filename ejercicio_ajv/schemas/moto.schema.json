{
    "$id": "moto.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Moto",
    "type": "object",
    "required": ["marca", "velocidad_maxima", "edad"],
    "additionalProperties": false,
    "properties": {
        "marca": {
            "type": "string",
            "description": "Nombre de la marca"
        },
        "velocidad_maxima": {
            "type": "number",
            "description": "Velocidad máxima que puede ir la moto",
            "minimum": 0
        },
        "edad": {
            "type": "integer",
            "description": "Edad que tiene la moto (Años que lleva en circulación)",
            "minimum": 0
        } 
    } 
}